<Page x:Class="Study_Step.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Study_Step.Pages" 
      xmlns:viewmodels="clr-namespace:Study_Step.ViewModels"
      mc:Ignorable="d" 
      Title="RegisterPage">
    
    <Page.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding RegisterCommand}" />
    </Page.InputBindings>
    
    <StackPanel Width="200">
        <TextBlock Text="Регистрация"
                   HorizontalAlignment="Center"
                   FontSize="22"
                   FontWeight="Bold"
                   Height="30"/>

        <TextBlock Text="Ваше имя"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10, 20, 0, 5"/>

        <Border Background="#dce1de"
                CornerRadius="15"
                Height="30">
            <!-- TextBox Login -->
            <TextBox x:Name="UsernameField"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="12, 0"
                     HorizontalAlignment="Stretch"
                     VerticalContentAlignment="Center"
                     Text="{Binding Username}"/>
        </Border>

        <TextBlock Text="Эл. почта"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10,5"/>

        <Border Background="#dce1de"
                CornerRadius="15"
                Height="30">
            <!-- TextBox Login -->
            <TextBox x:Name="EmailField"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="12, 0"
                     HorizontalAlignment="Stretch"
                     VerticalContentAlignment="Center"
                     Text="{Binding Email}"/>
        </Border>

        <TextBlock Text="Пароль"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10, 5"/>

        <Border Background="#dce1de"
                CornerRadius="15"
                Height="30">
            <!-- TextBox Password -->
            <PasswordBox x:Name="PasswordField"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="12, 0"
                         HorizontalAlignment="Stretch"
                         VerticalContentAlignment="Center"
                         PasswordChanged="ChangePassword"/>
        </Border>

        <!-- Button for Sign In -->
        <Button x:Name="RegisterBtn"
                Background="Transparent"
                BorderThickness="0"
                Margin="0, 20, 0, 5"
                Width="160"
                Command="{Binding RegisterCommand}">
            <Button.Content>
                <TextBlock Text="Зарегистрироваться"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Button.Content>
        </Button>

        <!-- Button for go to Register Page -->
        <Button Background="Transparent"
                BorderThickness="0"
                Width="100"
                Command="{Binding NavigateToSignInPageCommand}">
            <Button.Content>
                <TextBlock Text="Вернуться"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Button.Content>
        </Button>
    </StackPanel>
</Page>
